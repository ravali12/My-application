namespace ORSP.Controllers
{
    public class TuitionController : Controller
    {
        [HttpGet]
        public ActionResult Tuitiontb()
        {
            Tuition tuitionmodel = new Tuition();

            return View(tuitionmodel);
        }
        [HttpPost]
        public ActionResult Tuitiontb(Tuition tuitionmodel)
        {
            using (ConnectionDBEntities1 connectiondbentity = new ConnectionDBEntities1())
            {
                connectiondbentity.Tuitions.Add(tuitionmodel);
                connectiondbentity.SaveChanges();
            }
            ModelState.Clear();
            ViewBag.SuccessMessage = "Successfully Submitted.";
            return View("Tuitiontb", new Tuition());
        }
    }
}      

    

    



