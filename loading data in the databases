using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using myapplication.Models;
using System.Text;

namespace myapplication.Controllers
{
    public class DataFormController : Controller
    {
        [HttpGet]
        public ActionResult Index()
        {
            DataForm formmodel = new Form();




            return View(formmodel);
        }

        [HttpPost]
        public ActionResult Index(Form dformmodel)
        {
            using (ConnectionDBEntities10 connectiondbentities = new ConnectionDBEntities10())
            {

                connectiondbentities.Forms.Add(formmodel);
                connectiondbentities.SaveChanges();

            }
            ModelState.Clear();
            ViewBag.SuccessMessage = "SuccessfullySubmitted.";
            return View("Index", new Form());
        }

    
    }
}


*******//AnnualBudget//***********



using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using myapplication.Models;

namespace myapplication.Controllers
{
    public class AnnualBudgetController : Controller
    {
        // GET: AnnualBudget
        public ActionResult AnnualBudgettb()
        {
            AnnualBudget annualbudgetmodel = new AnnualBudget();

            return View(annualbudgetmodel);
        }
        [HttpPost]
        public ActionResult AnnualBudgettb(AnnualBudget annualbudgetmodel)
        {
            using (ConnectionDBEntities2 connectiondbentity = new ConnectionDBEntities2())
            {
                connectiondbentity.AnnualBudgets.Add(annualbudgetmodel);
                connectiondbentity.SaveChanges();
            }
            ModelState.Clear();
            ViewBag.SuccessMessage = "Successfully Submitted.";
            return View("AnnualBudgettb", new AnnualBudget());
        }
    }
}


