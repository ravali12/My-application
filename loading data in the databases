using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using ORSP.Models;
using System.Text;

namespace ORSP.Controllers
{
    public class DataFormController : Controller
    {
        [HttpGet]
        public ActionResult Index()
        {
            DataForm dataformmodel = new DataForm();




            return View(dataformmodel);
        }

        [HttpPost]
        public ActionResult Index(DataForm dataformmodel)
        {
            using (ConnectionDBEntities5 connectiondbentities = new ConnectionDBEntities5())
            {

                connectiondbentities.DataForms.Add(dataformmodel);
                connectiondbentities.SaveChanges();

            }
            ModelState.Clear();
            ViewBag.SuccessMessage = "SuccessfullySubmitted.";
            return View("Index", new DataForm());
        }

    
    }
}


