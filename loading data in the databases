namespace ORSP.Controllers
{
    public class AnnualBudgetController : Controller
    {
        // GET: AnnualBudget
        public ActionResult AnnualBudgettb()
        {
            AnnualBudget annualbudgetmodel = new AnnualBudget();

            return View(annualbudgetmodel);
        }
        [HttpPost]
        public ActionResult AnnualBudgettb(AnnualBudget annualbudgetmodel)
        {
            using (ConnectionDBEntities2 connectiondbentity = new ConnectionDBEntities2())
            {
                connectiondbentity.AnnualBudgets.Add(annualbudgetmodel);
                connectiondbentity.SaveChanges();
            }
            ModelState.Clear();
            ViewBag.SuccessMessage = "Successfully Submitted.";
            return View("AnnualBudgettb", new AnnualBudget());
        }
    }
}


